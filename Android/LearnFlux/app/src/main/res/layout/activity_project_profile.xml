<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/relative_border"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <LinearLayout
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/smile"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Old Folks Home"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/message"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/thumbs_pressed"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/ribbon_gold"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:padding="6dp"
                android:id="@+id/descProjectProfile"
                android:text="@string/large_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:id="@+id/gotoProjectDetails"
            android:text="See All" android:textColor="#FFFFFF"
            android:background="@drawable/btn_see_all" android:layout_marginLeft="10dp"
            android:layout_width="match_parent" android:layout_marginRight="10dp"
            android:layout_height="35dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:padding="5dp" android:layout_gravity="right" android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/join_group_selector"
                android:id="@+id/Profile_joinGroup"
                android:clickable="true"
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/share" android:layout_width="30dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#9E9E9E"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/projectProfileRecycler"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/keyboard"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="5dp"
            android:orientation="vertical">
            <EditText
                android:imeOptions="flagNoExtractUi"
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:maxLines="4"
                android:textSize="16sp"
                android:hint="Enter comments" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/photoAttachment"
                    android:src="@drawable/ic_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center|center_vertical"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center|center_vertical"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:src="@drawable/ic_folder" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center|end"
                    android:gravity="end"
                    android:id="@+id/postMessage"
                    android:fontFamily="sans-serif-medium"
                    android:text="Post"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingButton"
            android:layout_gravity="right|bottom"
            android:layout_margin="10dp"
            app:backgroundTint="#CC0000"
            android:src="@drawable/file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>