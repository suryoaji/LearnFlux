<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InterestGroup">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="#106571"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8bc34a"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="Interest groups"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_marginLeft="160dp"
            android:src="@drawable/ic_search"
            android:background="@android:color/transparent"
            android:layout_width="32dp"
            android:layout_height="50dp" />
        <ImageButton
            android:src="@drawable/ic_add"
            android:background="@android:color/transparent"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonAdd" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:id="@+id/recycler_group_interest"
        android:layout_margin="10dp"
        android:clipToPadding="false">
        </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="no data available" />
    <Button
        android:layout_marginTop="10dp"
        android:background="#8bc34a"
        android:textColor="#FFFFFF"
        android:text="See all"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="Interest Groups you might interested"
        android:textColor="#000"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <RelativeLayout
            android:background="@drawable/relative_border"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/networkImageBottom"
                android:src="@drawable/company2"
                android:scaleType="fitCenter"
                android:layout_margin="10dp"
                android:layout_width="60dp"
                android:layout_height="100dp" />

            <TextView
                android:textColor="#8bc34a"
                android:text="The National Association for the Educational of Young Children"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/textView33"
                android:layout_below="@+id/titleBottom"
                android:layout_toRightOf="@+id/networkImageBottom"
                android:layout_toEndOf="@+id/networkImageBottom" />

            <TextView
                android:id="@+id/titleBottom"  android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#000000"
                android:text="Early Childhood Education" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/networkImageBottom"
                android:layout_toEndOf="@+id/networkImageBottom" />

            <TextView
                android:textColor="#8bc34a"
                android:text="370 Members" android:textSize="12sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_below="@+id/textView33"
                android:layout_toRightOf="@+id/networkImageBottom"
                android:layout_toEndOf="@+id/networkImageBottom" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:background="@drawable/relative_border"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/networkImageBottom2"
                android:src="@drawable/company3"
                android:scaleType="fitCenter"
                android:layout_margin="10dp"
                android:layout_width="60dp"
                android:layout_height="100dp" />

            <TextView
                android:textColor="#8bc34a"
                android:text="370 Members" android:textSize="12sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView34"
                android:layout_toRightOf="@+id/networkImageBottom2"
                android:layout_toEndOf="@+id/networkImageBottom2" />

            <TextView
                android:id="@+id/titleBottom2"  android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#000000"
                android:text="Early Childhood Education" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/networkImageBottom2"
                android:layout_toEndOf="@+id/networkImageBottom2" />

            <TextView
                android:textColor="#8bc34a"
                android:text="The National Association for the Educational of Young Children"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/textView34"
                android:layout_below="@+id/titleBottom2"
                android:layout_toRightOf="@+id/networkImageBottom2"
                android:layout_toEndOf="@+id/networkImageBottom2" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:background="#8bc34a"
        android:textColor="#FFFFFF"
        android:text="See all"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    </LinearLayout>
</ScrollView>