<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:minWidth="250dp"
              android:layout_margin="@dimen/activity_horizontal_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView3" android:src="@drawable/icon_groups"
            android:layout_gravity="center_vertical"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/add_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Group&apos;s Name"
                android:inputType="textCapSentences"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:singleLine="true" android:focusable="true"
                android:textAppearance="?android:attr/textAppearanceSmall" android:enabled="true"
                android:editable="true"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <EditText
            android:id="@+id/add_group_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group&apos;s Description"
            android:imeOptions="actionUnspecified"
            android:focusable="true"
            android:maxLines="13"
            android:textAppearance="?android:attr/textAppearanceSmall" android:enabled="true"
            android:editable="true" android:capitalize="sentences"
            android:inputType="textCapSentences|textMultiLine"/>

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="20dp"
            android:id="@+id/btnCancel" android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/btnNext" android:layout_marginTop="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>