<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/projectUserProfile"
            android:src="@drawable/user_profile"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/titleUserProject"
            android:text="Grace Chong"  android:layout_toRightOf="@id/projectUserProfile"
            android:layout_width="wrap_content" android:layout_marginTop="20dp" android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:text="1 hour ago" android:textColor="#9E9E9E"
            android:layout_width="wrap_content"  android:layout_toRightOf="@+id/projectUserProfile"
            android:layout_below="@id/titleUserProject"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rowComment"
            android:text="Morbi pretium nulla vel risus pretium porttitor.Ut dictum nulla quis mauris gravida, ac lobortis enim lacinia."
            android:layout_below="@id/projectUserProfile"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/thumbs_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#9E9E9E" android:layout_marginLeft="10dp"
            android:text="20" android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#9E9E9E" android:layout_marginLeft="10dp"
            android:text="20" android:gravity="center_vertical"
            android:id="@+id/commentPage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#9E9E9E"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
</LinearLayout>