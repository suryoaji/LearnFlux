<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/actionBarMyProfile"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/projectListTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_marginLeft="20dp"
            android:gravity="center" android:textSize="15sp"
            android:text="Project List"
            android:textColor="#FFFFFF"/>
        <TextView
            android:visibility="invisible"
            android:id="@+id/projectProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_marginLeft="20dp"
            android:gravity="center" android:textSize="15sp"
            android:text="Project Profile"
            android:textColor="#FFFFFF"/>
        <ImageView
            android:id="@+id/notifProject"
            android:src="@drawable/broadcast"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="20dp" />
        <ImageView
            android:id="@+id/searchProject"
            android:src="@drawable/ic_search"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/actionBarLayout"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_manifest"
            android:src="@drawable/file"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/inviteCollab"
            android:src="@drawable/addpeople_selector"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/projectListLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listOfProjectRecycler" android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/emptyProject"
                android:text="No data"
                android:layout_gravity="center" android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ProgressBar
                android:id="@+id/progressProject"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:text="Projects You May Join"
            android:textColor="#000"
            android:paddingLeft="15dp" android:paddingTop="7dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listOfRecommendedProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <ImageView
                android:layout_gravity="center" android:layout_marginBottom="45dp"
                android:src="@drawable/project_sidemenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="No recommended project"
                android:gravity="center" android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
    </LinearLayout>
    <include
        android:id="@+id/projectProfileLayout"
        android:visibility="gone"
        layout="@layout/activity_project_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </include>
</LinearLayout>