<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:layout_marginTop="30dp" android:padding="5dp" android:orientation="vertical"
            android:background="@drawable/relative_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/smile"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Old Folks Home"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/projectEdit"
                android:src="@drawable/ic_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <TextView
                android:layout_margin="5dp"
                android:text="@string/large_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="6dp" android:layout_marginLeft="10dp"
            android:text="Mission" android:layout_marginRight="10dp"
            android:textColor="#000"
            android:paddingLeft="15dp" android:paddingTop="7dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:padding="5dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:text="@string/mission_text"
            android:layout_width="wrap_content"
            android:id="@+id/missionProject"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="6dp" android:layout_marginLeft="10dp"
            android:text="Goal" android:layout_marginRight="10dp"
            android:textColor="#000"
            android:paddingLeft="15dp" android:paddingTop="7dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:padding="5dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:text="@string/goal"
            android:layout_width="wrap_content"
            android:id="@+id/goalProject"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="6dp" android:layout_marginLeft="10dp"
            android:text="Dates" android:layout_marginRight="10dp"
            android:textColor="#000"
            android:paddingLeft="15dp" android:paddingTop="7dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <LinearLayout
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/startProject" android:drawableLeft="@drawable/calendar"
                android:layout_margin="3dp" android:padding="3dp" android:drawablePadding="3dp"
                android:layout_width="0dp" android:layout_weight="0.5"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/endProject"
                android:layout_margin="3dp" android:padding="3dp"
                android:drawableLeft="@drawable/calendar" android:drawablePadding="3dp"
                android:layout_width="0dp" android:layout_weight="0.5"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="6dp" android:layout_marginLeft="10dp"
            android:text="Duration" android:layout_marginRight="10dp"
            android:textColor="#000"
            android:paddingLeft="15dp" android:paddingTop="7dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/durationProject"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:paddingLeft="15dp" android:paddingTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
</ScrollView>