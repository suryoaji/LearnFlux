<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/save_button"
            android:layout_marginLeft="275dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/editCancel"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/relative_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="10dp">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/imgSmile"
            android:src="@drawable/smile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="Name"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="#F2F2F2"
            android:textSize="13sp"
            android:id="@+id/editProjectName"
            android:layout_toRightOf="@id/imgSmile"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:elevation="1dp" />
        <EditText
            android:hint="About"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:textSize="13sp"
            android:background="#F2F2F2"
            android:layout_below="@id/editProjectName"
            android:id="@+id/editProjectAbout"
            android:layout_toRightOf="@id/imgSmile"
            android:layout_width="match_parent"
            android:layout_height="98dp" />
        <EditText
            android:hint="Location"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:textSize="13sp"
            android:background="#F2F2F2"
            android:layout_below="@id/editProjectAbout"
            android:id="@+id/editProjectLocation"
            android:layout_toRightOf="@id/imgSmile"
            android:layout_width="match_parent"
            android:layout_height="51dp" />

    </RelativeLayout>

    <EditText
        android:padding="10dp"
        android:background="#F2F2F2"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:inputType="textMultiLine"
        android:id="@+id/editMission"
        android:hint="Mission"
        android:textSize="13sp"
        android:layout_margin="10dp"/>
    <EditText
        android:padding="10dp"
        android:background="#F2F2F2"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:inputType="textMultiLine"
        android:id="@+id/editGoal"
        android:hint="Goals"
        android:textSize="13sp"
        android:fontFamily="sans-serif"
        android:layout_margin="10dp"/>
    <EditText
        android:padding="10dp"
        android:background="#F2F2F2"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="none"
        android:id="@+id/editStartDate"
        android:hint="Start Date"
        android:fontFamily="sans-serif"
        android:layout_margin="10dp" />
    <EditText
        android:padding="10dp"
        android:background="#F2F2F2"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="none"
        android:id="@+id/editEndDate"
        android:hint="End Date"
        android:fontFamily="sans-serif"
        android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>