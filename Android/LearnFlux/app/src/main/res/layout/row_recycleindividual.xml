<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/relative_border"
        android:layout_width="328dp"
        android:layout_height="50dp">

        <com.idesolusiasia.learnflux.component.CircularNetworkImageView
            android:id="@+id/circularImage"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/individualName"
                android:text="LASALLE COLLEGE OF THE ARTS"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt1Desc"
                android:text="-" android:gravity="center"
                android:textColor="#8bc34a" android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:src="@drawable/add_friend"
            android:id="@+id/imageadd"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="20dp"/>
    </LinearLayout>
</LinearLayout>