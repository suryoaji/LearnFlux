<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/relative_border">

        <com.idesolusiasia.learnflux.component.CircularNetworkImageView
            android:id="@+id/circularImage"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/individualName" android:textStyle="bold" android:textColor="#000"
            android:layout_marginTop="8dp"  android:layout_marginLeft="10dp"
            android:text="Alice Whitmans"
            android:layout_toRightOf="@id/circularImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/txt1Desc" android:textColor="#8bc34a"
            android:textSize="12sp" android:layout_marginLeft="10dp"
            android:text="Artis and Crafts Teacher" android:layout_below="@+id/individualName"
            android:layout_toRightOf="@id/circularImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_person_pin_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView1" />
    </RelativeLayout>
</LinearLayout>