<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="@dimen/activity_horizontal_margin"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="Would you join this meeting next year?" android:id="@+id/tvQuestion"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
    />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/rgPoll">
    </RadioGroup>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_gravity="right">
        <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Poll Detail"
                android:id="@+id/btnChatRoom" android:layout_weight="1"/>
        <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="OK" android:id="@+id/btnOK"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>