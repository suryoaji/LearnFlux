<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:background="#FFFFFF"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MyProfileActivity">

    <include
        android:visibility="gone"
        android:id="@+id/mixLayout"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_marginTop="51dp"
        android:layout_marginRight="10dp"
        layout="@layout/dialog_friendsnotif"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <include
        android:visibility="gone"
        android:id="@+id/mixLayout2"
        android:layout_width="290dp"
        android:layout_height="247dp"
        android:layout_marginTop="51dp"
        android:layout_marginRight="10dp"
        layout="@layout/dialog_notifme"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:background="#106571"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

                <LinearLayout
                    android:id="@+id/tabMyProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/myProfileTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8bc34a"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:text="My Profile"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp" />
                    <View
                        android:id="@+id/line1"
                        android:background="#8bc34a"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="83dp"
                        android:layout_height="3dp">
                    </View>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/tabConnection"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/connectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:text="Connection"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp" />
                <View
                    android:id="@+id/line2"
                    android:background="#8bc34a"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="6dp"
                    android:visibility="gone"
                    android:layout_width="93dp"
                    android:layout_height="3dp">
                </View>
            </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <ImageButton
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/ic_peoples"
                    android:background="@android:color/transparent"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton2" />
                    <TextView
                        android:text="4" android:maxLines="2"
                        android:background="@drawable/round_background_green"
                        android:textColor="#FFF" android:gravity="center"
                        android:layout_marginLeft="82dp"
                        android:layout_marginTop="23dp"
                        android:layout_width="15dp" android:id="@+id/textNotif1"
                        android:layout_height="wrap_content" />
                </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/menotif"
                    android:src="@drawable/notification"
                    android:background="@android:color/transparent"
                    android:layout_width="36dp"
                    android:layout_height="50dp" />

                <TextView
                    android:text="2" android:maxLines="3"
                    android:background="@drawable/round_background_white"
                    android:textColor="#FFF" android:gravity="center"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="23dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textNotif2" />
            </FrameLayout>

            <ImageButton
                android:src="@drawable/ic_search"
                android:background="@android:color/transparent"
                android:layout_width="32dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2" android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true" android:focusable="true"
                android:id="@+id/tabIndividual">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/imageIndividual"
                        android:src="@drawable/individual_85"/>
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Individual"
                    android:id="@+id/individualTitle" android:textSize="12dp"
                    android:layout_gravity="center_horizontal"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp" android:background="@color/colorPrimary"
                    android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal" android:id="@+id/indicator_individual"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true" android:focusable="true"
                android:id="@+id/tabGroups">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/imageView11"
                        android:src="@drawable/icon_groups"/>
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Groups"
                    android:id="@+id/textView27" android:textSize="12dp"
                    android:layout_gravity="center_horizontal"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp" android:background="@color/colorPrimary"
                    android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal" android:id="@+id/indicator_groups"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true" android:focusable="true"
                android:id="@+id/tabOrganization" android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp">
                <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:layout_width="45dp" android:layout_height="45dp"
                        android:id="@+id/imageView14" android:src="@drawable/organization_85"
                     android:layout_marginLeft="6dp"
                        android:layout_gravity="center_horizontal"/>

                </FrameLayout>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Organization" android:id="@+id/textView28" android:textSize="12dp"
                    android:layout_gravity="center_horizontal"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp" android:background="@color/colorPrimary"
                    android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal" android:id="@+id/indicator_organization"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:clickable="true" android:focusable="true"
                android:orientation="vertical"  android:layout_marginLeft="20dp"
                android:id="@+id/tabContact">
                <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:layout_width="45dp" android:layout_height="45dp"
                        android:id="@+id/contact_80" android:src="@drawable/contact_80"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                </FrameLayout>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Contacts" android:id="@+id/textView29"
                    android:textSize="12dp" android:layout_gravity="center_horizontal"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp" android:background="@color/colorPrimary"
                    android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal" android:id="@+id/indicator_contact"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear1"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/editProfile"
                android:text="+ edit profile"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:textColor="#8bc34a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_margin="10dp"
                android:background="@drawable/relative_border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/imageParent"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/photos_icon"
                    android:scaleType="centerCrop"
                    android:layout_margin="3dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txtParentTitle"
                        android:layout_toRightOf="@+id/imageParent"
                        android:layout_below="@+id/txtParent"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:text="Grace Chong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtParentDesc"
                        android:layout_toRightOf="@+id/imageParent"
                        android:layout_below="@+id/txtParent"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:text="Parent, ACS  Teacher, NUS Associate of Science Society"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="see more"
                        android:id="@+id/tvSeeMore" android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark" android:textStyle="italic"
                        android:visibility="gone"/>

                </LinearLayout>
                <ImageView
                    android:layout_marginTop="3dp"
                    android:src="@drawable/speech_bubble"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="25dp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="6dp"
                android:text="My Children"
                android:textColor="#000"
                android:paddingLeft="15dp" android:paddingTop="7dp"
                android:background="#E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kid1"
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:layout_margin="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kid2"
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:layout_margin="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kid3"
                    android:layout_width="40dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            <TextView
                android:text="Affilated Organization"
                android:background="#E0E0E0"
                android:textColor="#000"
                android:paddingLeft="15dp" android:paddingTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="10dp"
                android:id="@+id/myProfileRecycler"
                android:layout_width="250dp"
                android:layout_height="80dp">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Interest"
                android:background="#E0E0E0"
                android:textColor="#000"
                android:paddingLeft="15dp" android:paddingTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/interest1"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#000"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="11dp"
                    android:text="Physical Health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_marginLeft="10dp"
                    android:src="@drawable/interest2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#000"
                    android:layout_marginLeft="12dp"
                    android:text="Environmental Science"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/interest3"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#000"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:text="Child Education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pager" android:layout_marginTop="5dp">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</RelativeLayout>
