<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/titleOfJoinProject"
        android:orientation="horizontal"
        android:background="@drawable/relative_border"
        android:padding="4dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/smile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Project Old Folks Home"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="6dp"
        android:text="Task"
        android:textColor="#000"
        android:paddingLeft="15dp" android:paddingTop="7dp"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:layout_margin="10dp"
        android:text="Gift Wrapping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="6dp"
        android:text="Dates"
        android:textColor="#000"
        android:paddingLeft="15dp" android:paddingTop="7dp"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/startJoinProjectTask" android:drawableLeft="@drawable/calendar"
            android:layout_margin="3dp" android:padding="3dp" android:drawablePadding="3dp"
            android:layout_width="0dp" android:layout_weight="0.5"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/endJoinProjectTask"
            android:layout_margin="3dp" android:padding="3dp"
            android:drawableLeft="@drawable/calendar" android:drawablePadding="3dp"
            android:layout_width="0dp" android:layout_weight="0.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="6dp"
        android:text="Duration"
        android:textColor="#000"
        android:paddingLeft="15dp" android:paddingTop="7dp"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:text="10 days" android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="6dp"
        android:text="Remarks"
        android:textColor="#000"
        android:paddingLeft="15dp" android:paddingTop="7dp"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:text="@string/mission_text"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    </LinearLayout>
    <Button
        android:text="Join Project"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_see_all"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/buttonJoinGroup" />
    <Button
        android:text="Select collaborator from contact book"
        android:visibility="gone"
        android:id="@+id/buttonInviteCollaborator"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_see_all"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</RelativeLayout>