<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/relative_border"
        android:layout_marginBottom="3dp"
        android:layout_width="330dp"
        android:layout_height="51dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imageOrgConnection"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nus_logo"
            android:layout_marginTop="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/titleOrgConnection"
            android:text="LASALLE COLLEGE OF THE ARTS"
            android:layout_toRightOf="@id/imageOrgConnection"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/StatusOrgConnection"
            android:text="arts and craft teacher"
            android:layout_toRightOf="@id/imageOrgConnection"
            android:layout_below="@id/titleOrgConnection"
            android:textColor="#8bc34a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/message_bubble"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/titleOrgConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>