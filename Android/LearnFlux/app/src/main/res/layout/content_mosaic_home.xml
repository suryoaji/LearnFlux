<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/ivCalendar" android:foreground="?attr/selectableItemBackground"
                android:layout_margin="3dp" android:src="@drawable/mosaic_calendar"
                android:scaleType="centerCrop" android:clickable="true"
                android:layout_height="150dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/ivChat" android:foreground="?attr/selectableItemBackground"
                android:layout_margin="3dp" android:src="@drawable/mosaic_chat"
                android:scaleType="centerCrop" android:clickable="true"
                android:layout_height="150dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/ivFavourite" android:foreground="?attr/selectableItemBackground"
                android:layout_margin="3dp" android:src="@drawable/mosaic_favourite"
                android:scaleType="centerCrop" android:clickable="true"
                android:layout_height="150dp"/>
            <ImageView android:layout_width="match_parent"
                       android:id="@+id/ivInterest"
                       android:foreground="?attr/selectableItemBackground" android:layout_margin="3dp"
                       android:src="@drawable/mosaic_interestgroup" android:scaleType="centerCrop"
                       android:clickable="true" android:layout_height="150dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/ivGallery" android:foreground="?attr/selectableItemBackground"
                android:layout_margin="3dp" android:src="@drawable/mosaic_gallery"
                android:scaleType="centerCrop" android:clickable="true"
                android:layout_height="150dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/ivPolls"
                android:foreground="?attr/selectableItemBackground" android:layout_margin="3dp"
                android:scaleType="centerCrop" android:src="@drawable/mosaic_polls"
                android:clickable="true" android:layout_height="150dp"/>
            <ImageView android:layout_width="match_parent"
                       android:id="@+id/ivattendance"
                       android:foreground="?attr/selectableItemBackground" android:layout_margin="3dp"
                       android:scaleType="centerCrop" android:src="@drawable/mosaic_attendance"
                       android:clickable="true" android:layout_height="150dp"/>
            <ImageView android:layout_width="match_parent"
                       android:id="@+id/ivSettings"
                       android:foreground="?attr/selectableItemBackground" android:layout_margin="3dp"
                       android:src="@drawable/mosaic_settings" android:scaleType="centerCrop"
                       android:clickable="true" android:layout_height="150dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>