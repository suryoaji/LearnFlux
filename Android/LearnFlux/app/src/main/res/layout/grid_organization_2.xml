<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="10dp"
              android:background="@drawable/border_green">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivLogo" android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_attendance_24dp" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Young Men&apos;s Christian Association"
        android:id="@+id/tvName" android:layout_gravity="center_horizontal"
        android:textColor="#000000" android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/ivLogo" android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" android:ellipsize="end" android:maxLines="2"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text="last seen 03-06-2015 at 13:00" android:id="@+id/tvLastSeen"
              android:layout_gravity="center_horizontal"
              android:layout_below="@+id/tvName" android:layout_centerHorizontal="true"
              android:layout_marginTop="5dp" android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLastSeen" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView4" android:src="@drawable/ic_chat_24dp"
                android:layout_centerHorizontal="true" android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="5"
                android:id="@+id/tvCountMessage"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_background_green" android:gravity="center_vertical|center_horizontal"
                android:textSize="10dp" android:layout_alignParentRight="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Message" android:id="@+id/textView8"
                      android:layout_gravity="center_horizontal" android:textSize="10dp"
                      android:layout_below="@+id/imageView4"
                      android:layout_centerHorizontal="true" android:gravity="center_vertical|center_horizontal"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1">
            <ImageView android:layout_width="35dp" android:layout_height="35dp"
                       android:id="@+id/imageView5" android:src="@drawable/ic_event_black_24dp"
                       android:layout_centerHorizontal="true" android:layout_marginTop="15dp"/>
            <TextView android:layout_width="20dp" android:layout_height="20dp"
                      android:text="5"
                      android:id="@+id/tvCountEvent"
                      android:background="@drawable/round_background_green"
                      android:gravity="center_vertical|center_horizontal"
                      android:layout_alignParentTop="true"
                      android:textSize="10dp" android:layout_alignParentRight="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Events" android:id="@+id/textView9"
                      android:textSize="10dp"
                      android:layout_weight="1" android:layout_gravity="center_horizontal"
                      android:layout_below="@+id/imageView5"
                      android:layout_centerHorizontal="true" android:gravity="center_vertical|center_horizontal"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1">
            <ImageView android:layout_width="35dp" android:layout_height="35dp"
                       android:id="@+id/imageView8" android:src="@drawable/ic_assignment_black_24dp"
                       android:layout_centerHorizontal="true" android:layout_marginTop="15dp"/>
            <TextView android:layout_width="20dp" android:layout_height="20dp"
                      android:text="5"
                      android:id="@+id/tvCountActivities" android:background="@drawable/round_background_green"
                      android:gravity="center_vertical|center_horizontal"
                      android:layout_alignParentTop="true"
                      android:textSize="10dp"
                      android:layout_alignParentRight="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Activities" android:id="@+id/textView13" android:textSize="10dp"
                      android:layout_weight="1" android:layout_gravity="center_horizontal"
                      android:layout_below="@+id/imageView8"
                      android:layout_centerHorizontal="true" android:gravity="center_vertical|center_horizontal"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>