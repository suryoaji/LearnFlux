<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.idesolusiasia.learnflux.OrgProfileActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/imageView9" android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:src="@drawable/lasalle_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3" android:layout_alignTop="@+id/imageView9"
        android:layout_toRightOf="@+id/imageView9" android:layout_alignBottom="@+id/imageView9"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal" android:textStyle="bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More"
        android:id="@+id/button" android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:background="@color/colorPrimary" android:textColor="#ffffff"
        android:layout_alignRight="@+id/scrollView2" android:layout_alignEnd="@+id/scrollView2"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView10"
        android:src="@drawable/ic_email_black_24dp" android:tint="@color/colorPrimary"
        android:layout_above="@+id/button" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginBottom="10dp"/>
    <ImageView android:layout_width="30dp" android:layout_height="30dp"
               android:id="@+id/imageView13"
               android:src="@drawable/ic_place_black_24dp" android:tint="@color/colorPrimary"
               android:layout_alignBottom="@+id/imageView10"
               android:layout_toRightOf="@+id/imageView10"
               android:layout_toEndOf="@+id/imageView10" android:layout_marginLeft="10dp"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" android:layout_below="@+id/imageView9"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" android:layout_above="@+id/imageView10"
        android:fillViewport="true">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView9" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/large_text"
                android:id="@+id/textView4"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Address : "
                android:id="@+id/textView5" android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimary" android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="9 Winstedt Rd, Singapore 227876"
                android:id="@+id/textView15" android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView5" android:layout_toEndOf="@+id/textView5"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Hours : " android:id="@+id/textView16"
                      android:textColor="@color/colorPrimary"
                      android:layout_below="@+id/textView5" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="08.00 - 17.00" android:id="@+id/textView17"
                      android:layout_below="@+id/textView15"
                      android:layout_toRightOf="@+id/textView16"
                      android:layout_toEndOf="@+id/textView16"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Phone : " android:id="@+id/textView18"
                      android:textColor="@color/colorPrimary"
                      android:layout_below="@+id/textView16" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="+6564965000" android:id="@+id/textView19"
                      android:layout_alignTop="@+id/textView18"
                      android:layout_toRightOf="@+id/textView18"
                      android:layout_toEndOf="@+id/textView18"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Total enrollment : " android:id="@+id/textView24"
                      android:textColor="@color/colorPrimary"
                      android:layout_marginTop="19dp"
                      android:layout_below="@+id/textView18" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="2,500 (2010)" android:id="@+id/textView25"
                      android:layout_alignTop="@+id/textView24"
                      android:layout_toRightOf="@+id/textView24"
                      android:layout_toEndOf="@+id/textView24"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Total enrollment : " android:id="@+id/textView26"
                      android:textColor="@color/colorPrimary"
                      android:layout_below="@+id/textView24" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true" android:layout_marginTop="10dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="1984" android:id="@+id/textView30"
                      android:layout_alignTop="@+id/textView26"
                      android:layout_toRightOf="@+id/textView26"
                      android:layout_toEndOf="@+id/textView26"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
