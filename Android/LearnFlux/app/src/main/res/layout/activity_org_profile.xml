<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.idesolusiasia.learnflux.OrgProfileActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/imageView9" android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:src="@drawable/lasalle_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3" android:layout_alignTop="@+id/imageView9"
        android:layout_toRightOf="@+id/imageView9" android:layout_alignBottom="@+id/imageView9"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal" android:textStyle="bold"/>
    <LinearLayout
        android:layout_below="@+id/imageView9" android:layout_centerHorizontal="true"
        android:orientation="horizontal" android:id="@+id/linearTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true" android:focusable="true"
            android:id="@+id/tabGroups">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/imageView11"
                    android:src="@drawable/icon_groups" android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Groups"
                android:id="@+id/textView27" android:textSize="12dp"
                android:layout_gravity="center_horizontal"/>
            <View
                android:layout_width="40dp"
                android:layout_height="4dp" android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" android:id="@+id/indicator_groups"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true" android:focusable="true"
            android:id="@+id/tabEvents" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="45dp" android:layout_height="45dp"
                    android:id="@+id/imageView14" android:src="@drawable/icon_events"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"/>

            </FrameLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Events" android:id="@+id/textView28" android:textSize="12dp"
                android:layout_gravity="center_horizontal"/>
            <View
                android:layout_width="40dp"
                android:layout_height="4dp" android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" android:id="@+id/indicator_events"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:clickable="true" android:focusable="true"
            android:orientation="vertical"
            android:id="@+id/tabActivities">
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="45dp" android:layout_height="45dp"
                    android:id="@+id/imageView12" android:src="@drawable/icon_activities"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"/>

            </FrameLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Activities" android:id="@+id/textView29"
                android:textSize="12dp" android:layout_gravity="center_horizontal"/>
            <View
                android:layout_width="40dp"
                android:layout_height="4dp" android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" android:id="@+id/indicator_act"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More"
        android:id="@+id/button" android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:background="@color/colorPrimary" android:textColor="#ffffff"
        android:layout_alignRight="@+id/scrollView2" android:layout_alignEnd="@+id/scrollView2"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView10"
        android:src="@drawable/ic_email_black_24dp" android:tint="@color/colorPrimary"
        android:layout_above="@+id/button" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginBottom="10dp"/>
    <ImageView android:layout_width="30dp" android:layout_height="30dp"
               android:id="@+id/imageView13"
               android:src="@drawable/ic_place_black_24dp" android:tint="@color/colorPrimary"
               android:layout_alignBottom="@+id/imageView10"
               android:layout_toRightOf="@+id/imageView10"
               android:layout_toEndOf="@+id/imageView10" android:layout_marginLeft="10dp"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" android:layout_below="@+id/linearTab"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" android:layout_above="@+id/imageView10"
        android:fillViewport="true">
        <RelativeLayout
            android:padding="5dp"
            android:orientation="vertical" android:background="@drawable/relative_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView9" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView4"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Address : "
                android:id="@+id/textView5" android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimary" android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="9 Winstedt Rd, Singapore 227876"
                android:id="@+id/textView15" android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView5" android:layout_toEndOf="@+id/textView5"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Hours : " android:id="@+id/textView16"
                      android:textColor="@color/colorPrimary"
                      android:layout_below="@+id/textView5" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="08.00 - 17.00" android:id="@+id/textView17"
                      android:layout_below="@+id/textView15"
                      android:layout_toRightOf="@+id/textView16"
                      android:layout_toEndOf="@+id/textView16"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Phone : " android:id="@+id/textView18"
                      android:textColor="@color/colorPrimary"
                      android:layout_below="@+id/textView16" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="+6564965000" android:id="@+id/textView19"
                      android:layout_alignTop="@+id/textView18"
                      android:layout_toRightOf="@+id/textView18"
                      android:layout_toEndOf="@+id/textView18"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Total enrollment : " android:id="@+id/textView24"
                      android:textColor="@color/colorPrimary"
                      android:layout_marginTop="19dp"
                      android:layout_below="@+id/textView18" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="2,500 (2010)" android:id="@+id/textView25"
                      android:layout_alignTop="@+id/textView24"
                      android:layout_toRightOf="@+id/textView24"
                      android:layout_toEndOf="@+id/textView24"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="Total enrollment : " android:id="@+id/textView26"
                      android:textColor="@color/colorPrimary"
                      android:layout_below="@+id/textView24" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true" android:layout_marginTop="10dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:text="1984" android:id="@+id/textView30"
                      android:layout_alignTop="@+id/textView26"
                      android:layout_toRightOf="@+id/textView26"
                      android:layout_toEndOf="@+id/textView26"/>
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:background="@android:color/transparent"
        android:src="@drawable/add_group"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/addPeople"
        android:layout_above="@+id/scrollView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
