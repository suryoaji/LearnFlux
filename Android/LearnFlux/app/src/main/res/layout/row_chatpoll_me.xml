<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:id="@+id/bubbleLayout"
    android:layout_gravity="right"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="right" android:focusable="true" android:clickable="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@drawable/bubble2"
        android:minWidth="@dimen/min_width_chat_bubble"
        android:layout_marginLeft="@dimen/margin_chat_bubble" android:focusable="false"
        android:clickable="false">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivPoll"
                android:src="@drawable/ic_poll_24dp"
                android:tint="@color/abc_secondary_text_material_light"
                android:layout_alignParentTop="true" android:layout_toRightOf="@+id/tvTime"
                android:layout_toEndOf="@+id/tvTime" android:clickable="false"
                android:focusable="false"/>
        </LinearLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text="You have created a poll question" android:id="@+id/textView12"
                  android:textColor="@color/textColorPrimary" android:clickable="false"
                  android:focusable="false"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text="Do you enjoy this Parent Meeting event?" android:id="@+id/tvPollQuestion"
                  android:layout_marginTop="10dp" android:textStyle="bold"
                  android:textColor="@color/textColorPrimary" android:clickable="false"
                  android:focusable="false"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text="click to respond " android:id="@+id/textView20"
                  android:layout_marginTop="10dp" android:textStyle="italic"
                  android:textColor="@color/textColorPrimary" android:clickable="false"
                  android:focusable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Today - 10.42"
            android:id="@+id/tvTime"
            android:textSize="10dp"
            android:textColor="@color/textColorPrimary"
            android:layout_centerVertical="true" android:layout_gravity="right"
            android:layout_marginTop="3dp" android:clickable="false" android:focusable="false"/>
    </LinearLayout>
</LinearLayout>